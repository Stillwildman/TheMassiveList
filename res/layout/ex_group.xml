<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exGroupLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/Image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_button_style"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/toText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/groupText_User1"
        android:text=": "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/groupText_User2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/toText1"
        android:background="@drawable/image_button_style"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/toText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/groupText_User2"
        android:text=":"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/groupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupText_User2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/Image1"
        android:background="@drawable/press_style01"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/groupText_User1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/Image1"
        android:background="@drawable/image_button_style"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="18sp" />

</RelativeLayout>
